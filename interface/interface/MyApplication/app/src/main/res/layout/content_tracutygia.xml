<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.learnadroid.myfirstapp.tracutygia"
    tools:showIn="@layout/app_bar_tracutygia">

    <ImageView
        android:id="@+id/imgView_userIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/txt_Giatri"
        android:layout_toStartOf="@+id/txt_Giatri"
        android:background="@color/colorPrimary"

        android:padding="8dp"
        android:tint="@color/white"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/txt_Giatri"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="17dp"
        android:background="@color/editTextBG"
        android:hint="Search"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_below="@+id/imgView_userIcon"
        android:layout_alignRight="@+id/txt_Giatri"
        android:layout_alignEnd="@+id/txt_Giatri"
        android:layout_marginTop="20dp" />

</RelativeLayout>
